generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Deliveryman {
  id         String       @id @default(uuid())
  username   String       @unique
  password   String
  deliveries Deliveries[]

  @@map("deliveryman")
}

model Clientes {
  id         String       @id @default(uuid())
  username   String       @unique
  password   String
  deliveries Deliveries[]

  @@map("clients")
}

model Deliveries {
  id             String   @id @default(uuid())
  id_client      String
  id_deliveryman String?
  item_name      String
  created_at     DateTime @default(now())
  end_at         DateTime?

  client      Clientes    @relation(fields: [id_client], references: [id])
  deliveryman Deliveryman? @relation(fields: [id_deliveryman], references: [id])

  @@map("deliveries")
}
